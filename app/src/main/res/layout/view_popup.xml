<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:id="@+id/root"
              android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@drawable/popup_bg_d"
        >

        <LinearLayout
            android:id="@+id/popup_header"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <CheckedTextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:gravity="center"
                android:layout_marginStart="@dimen/popup_title_text_margin_start"
                android:textSize="@dimen/popup_title_text_size"
                android:textColor="@color/colorTextBlack"
                />

            <ImageView
                android:id="@+id/divide"
                android:background="@color/divider"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxHeight="@dimen/popup_content_max_height"
                android:paddingLeft="@dimen/popup_content_horizontal_padding"
                android:paddingRight="@dimen/popup_content_horizontal_padding"
                android:paddingTop="@dimen/popup_content_vertical_padding"
                android:paddingBottom="@dimen/popup_content_vertical_padding"
                android:scrollbars = "vertical"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/popup_content_text_size"
                />

            <FrameLayout
                android:id="@+id/content_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:maxHeight="@dimen/popup_content_max_height">
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_popup_negative"
                android:layout_weight="1"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popup_button_height"
                android:background="@drawable/popup_btn_a"
                android:text="@string/button_cancel" />

            <Button
                android:id="@+id/bt_popup_positive"
                android:layout_weight="1"
                style="@style/button"
                android:background="@drawable/popup_btn_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popup_button_height"
                android:text="@string/button_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
