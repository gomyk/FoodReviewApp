<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/spinner_horizontal_padding"
              android:paddingRight="@dimen/spinner_horizontal_padding"
              android:layout_width="match_parent"
              android:layout_height="@dimen/spinner_item_height">
    <TextView
        android:id="@+id/menu_title"
        android:textColor="@color/spinner_menu_text"
        android:textSize="@dimen/spinner_text_size"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/menu_checkbox"
        android:clickable="false"
        android:button="@drawable/selector_radio_btn"
        android:layout_gravity="end|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
